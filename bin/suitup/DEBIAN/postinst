#!/bin/bash

home="$HOME"
if [ "$(whoami)" = "root" ]; then
  home=$(eval echo "~$SUDO_USER")
fi

# Create the .suitup home folder
mv "/usr/local/bin/.suitup" "${home}/.suitup"

# Move the completion file to the correct folder
if [ -d "/etc/bash_completion.d/" ]; then
  mv "${home}/.suitup/completion.sh" "/etc/bash_completion.d/suitup"
  source "/etc/bash_completion.d/suitup"
fi
